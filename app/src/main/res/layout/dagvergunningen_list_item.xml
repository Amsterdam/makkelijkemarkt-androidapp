<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/markten_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/dagvergunning_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        />

    <TextView
        android:id="@+id/dagvergunning_erkenningsnummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dagvergunning_id"
        android:textColor="@color/primary_text"
        />

    <TextView
        android:id="@+id/dagvergunning_datumtijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dagvergunning_erkenningsnummer"
        android:textColor="@color/primary_text"
        />

    <TextView
        android:id="@+id/dagvergunning_totale_lengte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dagvergunning_datumtijd"
        android:textColor="@color/primary_text"
        />

</RelativeLayout>