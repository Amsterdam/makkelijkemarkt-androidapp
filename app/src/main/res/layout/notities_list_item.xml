<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notities_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin"
    android:background="@android:color/white"
    >

    <!-- Afgevinkt -->
    <CheckBox
        android:id="@+id/afgevinkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mini_margin"
        android:layout_marginStart="@dimen/mini_margin"
        android:theme="@style/MMCheckBox"
        />

    <!-- Bericht -->
    <TextView
        android:id="@+id/bericht"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/textsize_content_small"
        />

    <!-- Aangemaakt -->
    <TextView
        android:id="@+id/aangemaakt"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/margin"
        android:paddingEnd="@dimen/margin"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:gravity="end"
        android:textColor="@color/primary"
        android:textSize="@dimen/textsize_content_small"
        />

</LinearLayout>